{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "dist/types",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["src", "types"],
  "exclude": [
    "dist",
    "storybook-static",
    "src/**/*.stories.tsx",
    "src/**/*.stories.mdx",
    "docs/**/*.stories.mdx",
    "src/**/*.test.tsx"
  ]
}
