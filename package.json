{
  "name": "hamon-ui",
  "version": "0.0.11",
  "description": "A minimal React component library.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "rollup -c",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "generate": "node ./utils/generate"
  },
  "keywords": [
    "react",
    "ui",
    "typescript"
  ],
  "author": "Shiyaam Sunder",
  "license": "MIT",
  "repository": "https://github.com/shiyaamsunder/hamon-ui.git",
  "homepage": "https://github.com/shiyaamsunder/hamon-ui.git#readme",
  "peerDependencies": {
    "@stitches/react": "^1.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/index.esm.js",
      "limit": "10 KB"
    }
  ],
  "np": {
    "contents": "dist",
    "tests": false,
    "cleanup": false
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@size-limit/preset-small-lib": "^5.0.3",
    "@stitches/react": "^1.1.0",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@types/react": "^17.0.19",
    "babel-loader": "^8.2.2",
    "colors": "^1.4.0",
    "np": "^7.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "size-limit": "^5.0.3",
    "typescript": "^4.4.2"
  }
}
